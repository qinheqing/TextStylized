/* pages/index/index.wxss */
view, text, scroll-view, textarea, button {
  box-sizing: border-box;
}

page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F2F2F7; /* Apple System Background Secondary */
  font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "SF Pro Display", "PingFang SC", "Helvetica Neue", Arial, sans-serif;
  color: #000000;
  -webkit-font-smoothing: antialiased;
}

.scrollarea {
  flex: 1;
  width: 100%;
  overflow-y: hidden;
}

.container {
  padding: 32rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
  display: flex;
  flex-direction: column;
  align-items: stretch;
  justify-content: flex-start;
  width: 100%;
  height: auto;
}

/* Tab 切换器 */
.tab-container {
  display: flex;
  background: rgba(118, 118, 128, 0.12);
  border-radius: 18rpx;
  padding: 4rpx;
  margin-bottom: 40rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 12rpx 0;
  font-size: 28rpx;
  font-weight: 500;
  color: #8E8E93;
  transition: all 0.2s ease;
  border-radius: 14rpx;
}

.tab-item.active {
  background: #FFFFFF;
  color: #000000;
  box-shadow: 0 3rpx 8rpx rgba(0,0,0,0.12);
}

/* Section Styling */
.section {
  width: 100%;
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #000000;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.title-text {
  letter-spacing: -0.5rpx;
}

/* Card Common Styling */
.card {
  background: #FFFFFF;
  border-radius: 32rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.04);
}

/* Input Area Styling */
.input-card {
  position: relative;
}

.input-area {
  width: 100%;
  height: 240rpx;
  font-size: 32rpx;
  line-height: 1.5;
  color: #000000;
}

.clear-btn {
  font-size: 28rpx;
  color: #007AFF;
  font-weight: 500;
  padding: 10rpx 20rpx;
  margin-right: -20rpx;
}

.char-count {
  position: absolute;
  right: 32rpx;
  bottom: 24rpx;
  font-size: 24rpx;
  color: #8E8E93;
}

/* Scenario Grid Styling */
.scenario-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.scenario-card {
  background: #FFFFFF;
  border-radius: 28rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.03);
  transition: all 0.2s ease;
}

.scenario-card:active {
  background: #F2F2F7;
  transform: scale(0.98);
}

.scenario-icon-box {
  width: 88rpx;
  height: 88rpx;
  background: #F2F2F7;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
}

.scenario-icon {
  font-size: 48rpx;
}

.scenario-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.scenario-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 4rpx;
}

.scenario-desc {
  font-size: 24rpx;
  color: #8E8E93;
}

.arrow-icon {
  font-size: 28rpx;
  color: #C7C7CC;
}

/* Style Grid Styling */
.style-grid {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  width: 100%;
}

.style-card {
  background: #FFFFFF;
  border-radius: 28rpx;
  padding: 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  position: relative;
  transition: all 0.2s cubic-bezier(0.25, 0.1, 0.25, 1);
  border: 4rpx solid transparent;
  box-shadow: 0 2rpx 16rpx rgba(0, 0, 0, 0.03);
  width: 48%;
  margin-bottom: 24rpx;
}

.style-card:active {
  transform: scale(0.96);
  background: #F2F2F7;
}

.style-card.active {
  border-color: #007AFF;
  box-shadow: 0 8rpx 32rpx rgba(0, 122, 255, 0.15);
}

.style-icon {
  font-size: 56rpx;
  margin-bottom: 16rpx;
}

.style-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #000000;
  margin-bottom: 6rpx;
}

.style-desc {
  font-size: 22rpx;
  color: #8E8E93;
  line-height: 1.3;
}

.active-badge {
  position: absolute;
  top: 12rpx;
  right: 12rpx;
  background: #007AFF;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* Action Button */
.generate-btn {
  background: #007AFF;
  color: #FFFFFF;
  border-radius: 40rpx;
  height: 160rpx;
  min-height: 160rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  font-weight: 800;
  width: 100% !important;
  margin: 40rpx 0;
  box-shadow: 0 24rpx 60rpx rgba(0, 122, 255, 0.4);
  border: none;
  padding: 0;
  letter-spacing: 4rpx;
}

.generate-btn:active {
  transform: scale(0.97);
  background: #0062CC;
}

.generate-btn[disabled] {
  background: #E5E5EA !important;
  color: #AEAEB2 !important;
  box-shadow: none;
}

.btn-content {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.spinner {
  width: 36rpx;
  height: 36rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  border-top-color: #FFFFFF;
  border-radius: 50%;
  animation: rotate 0.8s linear infinite;
}

@keyframes rotate {
  from { transform: rotate(0deg); }
  to { transform: rotate(360deg); }
}

/* Result Card */
.result-card {
  margin-top: 10rpx;
  border: none;
  background: #FFFFFF;
  opacity: 0;
  display: none;
  transform: translateY(20rpx);
  transition: all 0.5s cubic-bezier(0.16, 1, 0.3, 1);
}

.result-card.show {
  opacity: 1;
  display: block;
  transform: translateY(0);
}

.result-actions {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
  justify-content: flex-end;
}

.action-btn {
  font-size: 24rpx;
  color: #8E8E93;
  font-weight: 600;
  padding: 10rpx 20rpx;
  border-radius: 14rpx;
  background: #F2F2F7;
  transition: all 0.2s ease;
  white-space: nowrap;
}

.action-btn.primary {
  color: #007AFF;
  background: rgba(0, 122, 255, 0.1);
}

.result-content {
  padding-top: 10rpx;
}

.result-text {
  font-size: 32rpx;
  line-height: 1.6;
  color: #1C1C1E;
  word-break: break-all;
}

/* Action Footer */
.action-footer {
  margin-top: 10rpx;
  width: 100%;
}

.reset-btn {
  background: transparent;
  color: #FF3B30;
  border-radius: 32rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: 600;
  width: 100% !important;
  border: 3rpx solid rgba(255, 59, 48, 0.2);
}

/* Wizard Overlay */
.wizard-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 1000;
  visibility: hidden;
  opacity: 0;
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
}

.wizard-overlay.show {
  visibility: visible;
  opacity: 1;
}

.wizard-sheet {
  background: #F2F2F7;
  border-radius: 48rpx 48rpx 0 0;
  padding: 40rpx 32rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  transform: translateY(100%);
  transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  max-height: 90vh;
  display: flex;
  flex-direction: column;
  box-shadow: 0 -8rpx 32rpx rgba(0,0,0,0.1);
}

.wizard-overlay.show .wizard-sheet {
  transform: translateY(0);
}

.wizard-header {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding: 0 8rpx;
}

.scenario-icon-small {
  font-size: 44rpx;
  margin-right: 16rpx;
}

.wizard-title {
  font-size: 38rpx;
  font-weight: 700;
  flex: 1;
  color: #000;
}

.close-icon {
  font-size: 36rpx;
  color: #C7C7CC;
  padding: 10rpx;
}

.wizard-body {
  flex: 1;
  overflow-y: auto;
}

.wizard-section {
  margin-bottom: 48rpx;
}

.wizard-section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #000;
  margin-bottom: 24rpx;
  padding-left: 8rpx;
}

.wizard-field {
  margin-bottom: 24rpx;
}

.field-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #8E8E93;
  margin-bottom: 12rpx;
  display: block;
  padding-left: 8rpx;
}

.field-input {
  width: 100%;
  background: #FFFFFF;
  border-radius: 24rpx;
  padding: 24rpx;
  font-size: 30rpx;
  color: #000000;
  min-height: 120rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.02);
}

/* 建议风格标签 */
.suggestion-tag-box {
  margin-bottom: 32rpx;
  padding: 0 8rpx;
}

.suggestion-label {
  font-size: 24rpx;
  color: #007AFF;
  font-weight: 600;
  margin-bottom: 16rpx;
  display: block;
}

.tag-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.suggestion-tag {
  padding: 12rpx 28rpx;
  background: #FFFFFF;
  border-radius: 100rpx;
  font-size: 24rpx;
  color: #3A3A3C;
  font-weight: 500;
  border: 2rpx solid transparent;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.03);
}

.suggestion-tag.active {
  background: rgba(0, 122, 255, 0.1);
  color: #007AFF;
  border-color: #007AFF;
}

/* 迷你风格卡片 */
.style-grid.mini {
  gap: 16rpx;
}

.style-grid.mini .style-card {
  padding: 20rpx 16rpx;
  border-radius: 20rpx;
  margin-bottom: 0;
  width: 31%; /* 三列布局 */
}

.style-grid.mini .style-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.style-grid.mini .style-name {
  font-size: 24rpx;
}

.wizard-spacer {
  height: 40rpx;
}

.wizard-footer {
  padding-top: 24rpx;
}

.wizard-gen-btn {
  background: #007AFF;
  color: #FFFFFF;
  border-radius: 32rpx;
  height: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 700;
  width: 100% !important;
  box-shadow: 0 12rpx 30rpx rgba(0, 122, 255, 0.25);
}

.wizard-gen-btn:active {
  transform: scale(0.97);
  background: #0062CC;
}

.footer-tips {
  text-align: center;
  font-size: 24rpx;
  color: #C7C7CC;
  margin-top: 40rpx;
}
